<div class="container">
  <div class="row">
    <div class="col s6 offset-s3">
      <h1 class="center-align color orange">BURGERS!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col s6">
      <h3>Available Burgers</h3>
      <ul>
        {{#each burgers}} 
        {{#unless devoured}}
          {{> burgers/burger-block}}
        {{/unless}} 
        {{/each}}
      </ul>
    </div>
    <div class="col s6">
      <h3>Devoured Burgers</h3>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col s6 color grey lighten-2">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burgerInput">Burger Name:</label>
          <input type="text" id="burgerInput" name="name">
        </div>

        <button class="btn color red" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>